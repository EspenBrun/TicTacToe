<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <!-- All button text-->
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom
        </item>
    </style>

    <style name="TextAppearance.AppCompat.Button.Custom">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--<style name="RegularButtons">-->
        <!--<item name="colorButtonNormal">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="AppTheme.TicTacToeButtons">
        <item name="android:layout_width">@dimen/game_btn_padding</item>
        <item name="android:layout_height">@dimen/game_btn_padding</item>
        <item name="android:textSize">@dimen/game_btn_text</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
