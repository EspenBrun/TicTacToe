            style="@style/AppTheme.TicTacToeButtons"
            android:onClick="btnClick"
            android:text="" />

        <Button
            android:id="@+id/b2"
            style="@style/AppTheme.TicTacToeButtons"
            android:onClick="btnClick"
            android:text="" />
